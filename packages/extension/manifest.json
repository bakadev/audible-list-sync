{
  "manifest_version": 3,
  "name": "Audible Library Extension",
  "version": "1.0.13",
  "description": "Export your Audible library data with comprehensive metadata for backup and analysis",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.audible.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.audible.com/library*",
        "*://*.audible.com/wl*"
      ],
      "js": [
        "utils/storage-manager.js",
        "utils/rate-limiter.js",
        "utils/retry-handler.js",
        "utils/json-normalizer.js",
        "scraper/metadata-extractor.js",
        "scraper/library-scraper.js",
        "scraper/wishlist-scraper.js",
        "scraper/store-scraper.js",
        "overlay-ui.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay-ui.js",
        "styles/overlay.css",
        "scraper/*.js",
        "utils/*.js"
      ],
      "matches": [
        "*://*.audible.com/*"
      ]
    }
  ]
}
