// Prisma Schema for Audible Library Sync MVP
// Database: PostgreSQL 15+

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Core MVP Entities
// ============================================================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  libraryEntries   LibraryEntry[]
  syncTokens       SyncToken[]
  syncHistory      SyncHistory[]
  sessions         Session[]
  accounts         Account[]

  @@index([email])
}

// ============================================================================
// Enhanced Title Catalog (Admin Feature 004)
// ============================================================================

model Title {
  asin              String             @id
  title             String
  subtitle          String?
  description       String?            @db.Text
  summary           String?            @db.Text
  image             String?
  runtimeLengthMin  Int?
  rating            String?
  releaseDate       DateTime?
  publisherName     String?
  isbn              String?
  language          String?
  region            String?
  formatType        String?
  literatureType    String?
  copyright         Int?
  isAdult           Boolean            @default(false)
  seriesAsin        String?
  seriesPosition    String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  // Relations
  authors          AuthorOnTitle[]
  narrators        NarratorOnTitle[]
  genres           GenreOnTitle[]
  series           Series?            @relation(fields: [seriesAsin], references: [asin])
  libraryEntries   LibraryEntry[]

  @@index([title])
  @@index([seriesAsin])
}

model Author {
  asin      String          @id
  name      String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  titles AuthorOnTitle[]

  @@index([name])
}

model AuthorOnTitle {
  authorAsin String
  titleAsin  String

  author Author @relation(fields: [authorAsin], references: [asin], onDelete: Cascade)
  title  Title  @relation(fields: [titleAsin], references: [asin], onDelete: Cascade)

  @@id([authorAsin, titleAsin])
  @@index([titleAsin])
}

model Narrator {
  id        String            @id @default(cuid())
  name      String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  titles NarratorOnTitle[]

  @@unique([name])
  @@index([name])
}

model NarratorOnTitle {
  narratorId String
  titleAsin  String

  narrator Narrator @relation(fields: [narratorId], references: [id], onDelete: Cascade)
  title    Title    @relation(fields: [titleAsin], references: [asin], onDelete: Cascade)

  @@id([narratorId, titleAsin])
  @@index([titleAsin])
}

model Genre {
  asin      String         @id
  name      String
  type      String         // 'genre' or 'tag'
  createdAt DateTime       @default(now())

  titles GenreOnTitle[]

  @@index([name])
  @@index([type])
}

model GenreOnTitle {
  genreAsin String
  titleAsin String

  genre Genre @relation(fields: [genreAsin], references: [asin], onDelete: Cascade)
  title Title @relation(fields: [titleAsin], references: [asin], onDelete: Cascade)

  @@id([genreAsin, titleAsin])
  @@index([titleAsin])
}

model Series {
  asin      String   @id
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  titles Title[]

  @@index([name])
}

model LibraryEntry {
  id         String   @id @default(cuid())
  userId     String
  titleAsin  String
  userRating Int      @default(0)
  status     String   // 'Finished', 'Not Started', 'In Progress'
  progress   Int      @default(0)
  timeLeft   String?
  source     LibrarySource
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  title Title @relation(fields: [titleAsin], references: [asin], onDelete: Cascade)

  @@unique([userId, titleAsin])
  @@index([userId])
  @@index([titleAsin])
  @@index([status])
  @@index([source])
}

enum LibrarySource {
  LIBRARY
  WISHLIST
}

model SyncToken {
  id        String   @id @default(uuid())
  jti       String   @unique
  userId    String
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([jti])
  @@index([used])
  @@index([expiresAt])
}

model SyncHistory {
  id             String   @id @default(uuid())
  userId         String
  syncedAt       DateTime
  titlesImported Int
  newToCatalog   Int
  libraryCount   Int
  wishlistCount  Int
  warnings       String[]
  success        Boolean
  errorMessage   String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([syncedAt])
}

// ============================================================================
// NextAuth Tables
// ============================================================================

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

